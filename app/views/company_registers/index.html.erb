<p id="notice"><%= notice %></p>

<h1>Listing Company Registers</h1>

<table>
  <thead>
    <tr>
      <th>Business name</th>
      <th>Address number</th>
      <th>Address street</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Contact number</th>
      <th>Account handler first</th>
      <th>Account handler last</th>
      <th>Password hash</th>
      <th>Member since</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @company_registers.each do |company_register| %>
      <tr>
        <td><%= company_register.business_name %></td>
        <td><%= company_register.address_number %></td>
        <td><%= company_register.address_street %></td>
        <td><%= company_register.city %></td>
        <td><%= company_register.state %></td>
        <td><%= company_register.zip %></td>
        <td><%= company_register.contact_number %></td>
        <td><%= company_register.account_handler_first %></td>
        <td><%= company_register.account_handler_last %></td>
        <td><%= company_register.password_hash %></td>
        <td><%= company_register.member_since %></td>
        <td><%= link_to 'Show', company_register %></td>
        <td><%= link_to 'Edit', edit_company_register_path(company_register) %></td>
        <td><%= link_to 'Destroy', company_register, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

